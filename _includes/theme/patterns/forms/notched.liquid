<div class="input-wrap input-notched{% if include.data.class %} {{ include.data.class }}{% endif %}">
  <input id="{{ include.data.id | default: 'text-example' }}" name="{{ include.data.id | default: 'text-example' }}" type="{{ include.data.type | default: 'text' }}" pattern="\S+" required />
  <div class="notched-wrap">
    <div class="notched-pre"></div>
    <div class="notched-label">
      <label class="{{ include.data.labelClass | default: 'label-basic' }}" for="{{ include.data.id | default: 'text-example' }}">{{ include.data.text | default: 'Text Input' }}</label>
    </div>
    <div class="notched-post"></div>
  </div>
</div>